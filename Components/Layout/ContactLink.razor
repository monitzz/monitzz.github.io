<span>
    <img class="me-2" src="images/icons/@IconPath" alt="@Title" title="@Title" height="20px" />
    <a class="icon-link icon-link-hover" href="@Url" target="_blank" onmouseover="this.style.color = '#4c1048'" onmouseleave="this.style.color = 'var(--alt-dark)'">
        @Text
    </a>
</span>

@code
{
    [Parameter] public string IconPath { get; set; } = String.Empty;
    [Parameter] public string Title { get; set; } = String.Empty;
    [Parameter] public string Url { get; set; } = String.Empty;
    [Parameter] public string Text { get; set; } = String.Empty;
}
