@page "/"
@using Portfolio.Components.Layout

<PageTitle>Home</PageTitle>

<ProfilePicture />

<div class="text-center">
    <h2>Igor Borges Kühl</h2>
    <h4>Desenvolvedor de Software</h4>

    <p class="my-5">Estudo por conta própria pela internet com foco no aprendizado para desenvolver páginas web e aplicativos cada vez melhores!</p>

    <div class="language-container d-flex flex-row justify-content-evenly">
        <LanguageBlock
            Label="Tenho conhecimento em:"
            IconPaths="@_knownLanguagePaths"
            Titles="@_knownLanguageTitles"
        />

        <LanguageBlock
            Label="Pretendo estudar:"
            IconPaths="@_languagesToStudyPaths"
            Titles="@_languagesToStudyTitles"
        />
    </div>
</div>

@code
{
    private string[] _knownLanguagePaths = ["c-sharp.svg", "html.svg", "css.svg"];
    private string[] _knownLanguageTitles = ["C#", "HTML", "CSS"];
    private string[] _languagesToStudyPaths = ["blazor.svg", "aspdotnet.svg", "sql.svg"];
    private string[] _languagesToStudyTitles = ["Blazor", "ASP.NET", "SQL"];
}
